<h2>Client List</h2>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @clients.any? %>
      <ul>
        <% @clients.each() do | client | %>
          <li><a href="/client/<%= client.id %>"><%= client.name %></a></li>
        <% end %>
      </ul>
    <% else %>
    <h3>There are no clients currently.</h3>
    <h3><a href="/client/add">Add a New Client</a></h3>
    <h3><a href="/">Home</a></h3>
    <% end %>
  </div>
</div>
