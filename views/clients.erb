<% if @stylists.any?() %>
<h2>Client List</h2>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @clients.any?() %>
      <ul>
        <% @clients.each() do | client | %>
          <li><a href="/clients/<%= client.id %>"><%= client.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
    <h3>There are no clients currently.</h3>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Add a New Client</h3>
    <form action="/clients" method="post">
      <label for="name">Client Name
        <input id="name" name="name" type="text">
      </label>
      <label for="phone_number">Client Phone Number
        <input id="phone_number" name="phone_number" type="text">
      </label>
      <label for="stylist_id">Select a Stylist</label>
        <select id='stylist_id' name='stylist_id' type='text'>
          <% @stylists.each() do |stylist| %>
            <option value="<%= stylist.id()%>"> <%= stylist.name() %></option>
          <% end %>
        </select>
      <button type="submit">Add Client</button>
    </form>
  </div>
</div>

<% else %>
  <p>Please add stylist before adding a client.</p>
<% end %>
<h3><a href="/stylists">View Stylists</a></h3>
<h3><a href="/">Home</a></h3>
