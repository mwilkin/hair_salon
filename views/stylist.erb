<h2>Stylist</h2>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3><%= @stylist.name %></h3>
    <hr>
    <h3><%= @stylist.id %></h3>
    <hr>
    <h3><%= @stylist.phone_number %></h3>
  </div>
</div>
<hr>
<h3><a href="/stylist/update<% @stylist.id%>">Update Stylist</a></h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <form action="/stylist/<%= @stylist.id() %>" method="post">
        <input id="name" type="hidden" name="_method" class="form-control" value="patch">
        <div class="form-group">
          <label for="new_name">New Name
            <input type="text" name="new_name" id="new_name">
          </label>
        </div>
        <div class="form-group">
          <label for="phone_number">Phone number
            <input id="phone" type="phone" name="phone_number" class="form-control" required>
          </label>
        </div>
        <button type="Submit" name="button" class="btn-primary">Update Stylist</button>
      </form>
        <hr>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <form class="form-control" action="/stylists/<%= stylist.id() %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" name="submit">Delete Stylist</button>
            </form>
          </div>
        </div>
        <h3><a href="/">Home</a></h3>
      </form>
    </div>
  </div>
</div>
