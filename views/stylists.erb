<h2>Chop Shop Salon Stylist List</h2>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @stylists.any? %>
    <ul>
      <% @stylists.each() do | stylist | %>
      <li><a href="/stylists/<%= stylist.id() %>"><%= stylist.name() %></a></li>
      <% end %>
    </ul>
    <% else %>
    <h3>There are no stylists currently.</h3>
    <hr>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <form class="" action="/stylists" method="post">
        <h3>Add a Stylist:</h3>
        <div class="form-group">
          <label for="name">Stylist Name</label>
            <input id="name" type="text" name="name" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="phone_number">Phone number</label>
            <input id="phone" type="tel" name="phone_number" required pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" title="Ten digits code"class="form-control" placeholder="000-000-0000" required>
        </div>
        <button type="Submit" class="btn-primary">Add Stylist</button>
        <hr>
      </form>
      <% if @stylists.any?() %>
        <a href="/clients">Check our your clients</a>
      <% end %>
      <h3><a href="/">Home</a></h3>
    </div>
  </div>
</div>
