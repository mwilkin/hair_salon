<h2>Stylist List</h2>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @stylists.any? %>
    <ul>
      <% @stylists.each() do | stylist | %>
      <li><a href="/stylist<%= stylist_id()%>"><%=stylist.name()%></a></li>
      <% end %>
    </ul>
    <% else %>
    <h3>There are no stylists currently.</h3>
    <h3><a href="/stylist/add">Add a Stylist</a></h3>
    <% end %>
  </div>
</div>
